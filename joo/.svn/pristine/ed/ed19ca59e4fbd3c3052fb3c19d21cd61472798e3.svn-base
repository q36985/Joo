<volist name="item_list" id="item">
    <div class="picitem">
        <div class="picbox">
            <a href="{:U('item/index', array('id'=>$item['id']))}" title="{$item.title}" target="_blank"><img alt="{$item.title}" class="J_img J_decode_img" data-uri="{:base64_encode(get_thumb($item['thumb'], 'small'))}" width="280" height="280" /></a>
            <p>
                <a href="{:U('item/index', array('id'=>$item['id']))}" class="pictitle">{$item.intro}</a>
                <b class="grade">{$item.price}</b>
            </p>
        </div>
    </div>
</volist>
