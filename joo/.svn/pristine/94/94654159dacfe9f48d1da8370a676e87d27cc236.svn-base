<!doctype html>
<html>
<head>
    <include file="public:head"/>
    <css file="__STATIC__/css/default/space.css"/>
</head>
<body>
<div class="wrap">
    <include file="public:header"/>

    <div class="content">
        <include file="space:userbar"/>
        <div class="cbar clearfix">
            <a href="{:U('space/index', array('uid'=>$user['id']))}">图片</a>
            <a href="{:U('space/album', array('uid'=>$user['id']))}" class="current">专辑</a>
            <a href="{:U('space/like', array('uid'=>$user['id']))}">收藏</a>
            <a href="{:U('space/follow', array('uid'=>$user['id']))}">关注</a>
            <a href="{:U('space/fans', array('uid'=>$user['id']))}">粉丝</a>
            <a class="J_createalbum_btn btn fl mr15 btngreen" href="javascript:;">{:L('create_album')}</a>
        </div>
        <div class="piccont clearfix">
            <div id="zhuaji" style="display:">
                <volist name="album_list" id="album">
                    <div class="album clearfix">
                        <div class="album_title">
                            <h1>{$album.title}</h1>

                            <p>创建于{$album.add_time},<a
                                    href="{:U('album/detail', array('id'=>$album['id']))}">{$album.items}张图片</a></p>
                        </div>
                        <div class="album_skin">
                            <volist name="album.item" id="vo">
                                <if condition="$vo['is_index'] eq 1">
                                    <a href="{:U('item/index', array('id'=>$vo['item_id']))}">
                                        <img src="./data/thumb/_thumb_280x_{$album.uid}_{$vo.item_id}.jpg"
                                             width="280" height="280"/>
                                    </a>
                                </if>

                            </volist>

                        </div>
                        <div class="album_morepic">
                            <for start="0" end=":C('pin_album_cover_items')">
                                <present name="album['cover'][$i]">
                                    <if condition="$i eq 0">
                                        <else/>
                                        <div class="album_item"><a
                                                href="{:U('item/index', array('id'=>$album['item'][$i]['item_id']))}"><img
                                                src="./data/thumb/_thumb_280x_{$album.uid}_{$album['item'][$i]['item_id']}.jpg"
                                                width="140" height="140"/></a>
                                        </div>
                                    </if>
                                </present>
                            </for>
                            <div class="album_item album_link">
                                <a target="_blank" href="{:U('album/detail', array('id'=>$album['id']))}"><strong>+{$album.items_display}</strong>更多图片</a>
                            </div>
                        </div>
                    </div>


                </volist>

            </div>

        </div>
    </div>
    <div class="footer"></div>
</div>

<include file="public:footer"/>
</body>
</html>
